<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.smarthome">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.app.smarthome.activities.SignupActivity"
            android:exported="true" />
        <activity
            android:name="com.app.smarthome.activities.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.app.smarthome.activities.HomeActivity"
            android:exported="true"
            android:theme="@style/Home"/>
        <activity
            android:name="com.app.smarthome.activities.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>